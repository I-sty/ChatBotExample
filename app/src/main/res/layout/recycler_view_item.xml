<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.chatbot.data.OwnerType" />

        <variable
            name="bindingModel"
            type="com.example.chatbot.ui.main.recyclerview.base.BaseBindingModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">

        <ImageView
            android:id="@+id/list_item_favicon_bot"
            android:layout_width="@dimen/size_favicon"
            android:layout_height="@dimen/size_favicon"
            android:layout_marginStart="@dimen/margin_small"
            android:contentDescription="@string/_null"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="@{bindingModel.favIconBotVisibility}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/list_item_favicon_user"
            android:layout_width="@dimen/size_favicon"
            android:layout_height="@dimen/size_favicon"
            android:layout_marginEnd="@dimen/margin_default"
            android:contentDescription="@string/_null"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="@{bindingModel.favIconUserVisibility}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:layout_constraintEnd_toStartOf="@+id/list_item_favicon_user"
            app:layout_constraintStart_toEndOf="@id/list_item_favicon_bot"
            app:layout_constraintTop_toTopOf="@+id/list_item_favicon_bot">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{context.getColor(bindingModel.backgroundColor)}"
                android:padding="@dimen/margin_default">

                <ImageView
                    android:id="@+id/list_item_inner_icon_bot"
                    android:layout_width="@dimen/size_favicon"
                    android:layout_height="@dimen/size_favicon"
                    android:contentDescription="@string/_null"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="@{bindingModel.shouldShownInnerIcon(OwnerType.BOT)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/list_item_inner_icon_user"
                    android:layout_width="@dimen/size_favicon"
                    android:layout_height="@dimen/size_favicon"
                    android:contentDescription="@string/_null"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="@{bindingModel.shouldShownInnerIcon(OwnerType.USER)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:singleLine="false"
                    android:text="@{bindingModel.message}"
                    app:layout_constraintEnd_toStartOf="@+id/list_item_inner_icon_user"
                    app:layout_constraintStart_toEndOf="@+id/list_item_inner_icon_bot"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="300dp"
                    app:layout_constraintWidth_min="150dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@{bindingModel.date}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>